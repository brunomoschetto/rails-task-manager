<div class="container mt-4">
  <div class="d-flex align-items-center mb-3">
    <h1 class="mr-3">Tasks</h1>
    <i class="fa-solid fa-list-check fa-2x text-primary"></i>
  </div>

  <p class="lead">These are your pending tasks:</p>

  <ul class="list-group">
    <% @tasks.each do |task| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to task.title, task_details_path(task), class: 'text-decoration-none' %>
        <span class="badge <%= task.completed ? 'bg-success' : 'bg-danger' %>">
          <%= task.completed ? 'Completed' : 'Not Completed' %>
        </span>
      </li>
    <% end %>
  </ul>

  <h3 class="mt-4">
    <%= link_to "Create a new task", new_task_path, class: 'btn btn-success' %>
  </h3>
</div>
